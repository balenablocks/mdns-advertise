{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es2021",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*.ts",
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
